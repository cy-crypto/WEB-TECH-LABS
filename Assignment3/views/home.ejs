<%- include('partials/header') %>

<section class="hero-section">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">Collect Legendary Gaming Cards</h1>
      <p class="hero-description">
        Build the ultimate deck with rare, epic, and legendary cards inspired by competitive esports and fantasy worlds.
      </p>
      <a href="/products" class="btn-primary">Browse All Cards</a>
    </div>
    <div class="hero-image">
      <img src="/assets/home_play_prizes.png" alt="Gaming Cards Showcase" class="prize-image" />
    </div>
  </div>
</section>

<section class="how-it-works">
  <div class="container">
    <h2 class="section-title">How Play Cards Works</h2>
    <div class="steps-container">
      <div class="step">
        <div class="step-number">1</div>
        <div class="step-content">
          <h3>Pick Your Deck</h3>
          <p>Explore dozens of themed card sets crafted for different playstyles.</p>
        </div>
      </div>
      <div class="step">
        <div class="step-number">2</div>
        <div class="step-content">
          <h3>Add Cards To Cart</h3>
          <p>Mix, match, and customize your collection with your favorite cards.</p>
        </div>
      </div>
      <div class="step">
        <div class="step-number">3</div>
        <div class="step-content">
          <h3>Checkout & Play</h3>
          <p>Secure checkout and fast delivery so you can start battling instantly.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="prizes-section">
  <div class="container">
    <h2 class="section-title">Featured Cards</h2>
    <div class="prizes-container">
      <% if (products && products.length) { %>
        <% products.forEach(function(product) { %>
          <div class="prize-card">
            <div class="prize-image">
              <img src="<%= product.image %>" alt="<%= product.name %>" />
            </div>
            <div class="prize-content">
              <h3><%= product.name %></h3>
              <p><%= product.description %></p>
              <p><strong>Rarity:</strong> <%= product.rarity %></p>
              <p><strong>Price:</strong> $<%= product.price.toFixed(2) %></p>
              <a href="/products/<%= product._id %>" class="btn-prize">View Card</a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <p>No cards available yet. Seed the database to see featured cards.</p>
      <% } %>
    </div>
  </div>
</section>

<section class="testimonials-section">
  <div class="container">
    <h2 class="section-title">What Players Say</h2>
    <div class="testimonials-container">
      <div class="testimonials-initial">
        <div class="testimonial-card">
          <div class="testimonial-header">
            <div class="customer-info">
              <div class="customer-avatar">
                <img src="/assets/user-1.jpeg" alt="Sarah Johnson" />
              </div>
              <div class="customer-details">
                <h3 class="customer-name">Sarah Johnson</h3>
                <div class="star-rating">
                  <span class="star">★</span>
                  <span class="star">★</span>
                  <span class="star">★</span>
                  <span class="star">★</span>
                  <span class="star">★</span>
                </div>
              </div>
            </div>
          </div>
          <p class="review-text">
            "The Legendary Dragon card looks insane in person. The foil finish and artwork are next level!"
          </p>
        </div>

        <div class="testimonial-card">
          <div class="testimonial-header">
            <div class="customer-info">
              <div class="customer-avatar">
                <img src="/assets/user-2.jpeg" alt="Mike Chen" />
              </div>
              <div class="customer-details">
                <h3 class="customer-name">Mike Chen</h3>
                <div class="star-rating">
                  <span class="star">★</span>
                  <span class="star">★</span>
                  <span class="star">★</span>
                  <span class="star">★</span>
                  <span class="star">★</span>
                </div>
              </div>
            </div>
          </div>
          <p class="review-text">
            "Great quality cards and fast shipping. My friends all want to know where I got my deck from."
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>


