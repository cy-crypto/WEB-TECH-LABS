<%- include('partials/header') %>

  <div class="admin-container">
    <div class="admin-page-header">
      <h1>Admin Dashboard</h1>
      <a href="/admin/products/add" class="btn-admin-primary">Add New Product</a>
    </div>

    <div class="admin-stats">
      <div class="stat-card">
        <div class="stat-icon">ðŸ“¦</div>
        <div class="stat-info">
          <h3><%= totalProducts %></h3>
          <p>Total Products</p>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">âš¡</div>
        <div class="stat-info">
          <h3><%= recentProducts.length %></h3>
          <p>Recently Added</p>
        </div>
      </div>
    </div>

    <div class="admin-section">
      <div class="admin-section-header">
        <h2>Recent Products</h2>
        <a href="/admin/products" class="btn-admin-link">View All Products â†’</a>
      </div>

      <% if (recentProducts.length > 0) { %>
        <div class="admin-products-grid">
          <% recentProducts.forEach(function(product) { %>
            <div class="admin-product-card">
              <div class="admin-product-image">
                <img src="<%= product.image %>" alt="<%= product.name %>" />
              </div>
              <div class="admin-product-info">
                <h3><%= product.name %></h3>
                <p class="admin-product-rarity"><%= product.rarity %></p>
                <p class="admin-product-price">$<%= product.price.toFixed(2) %></p>
                <div class="admin-product-actions">
                  <a href="/admin/products/<%= product._id %>/edit" class="btn-admin-edit">Edit</a>
                  <form method="POST" action="/admin/products/<%= product._id %>/delete" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                    <button type="submit" class="btn-admin-delete">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="admin-empty-state">
          <p>No products found. <a href="/admin/products/add">Add your first product</a></p>
        </div>
      <% } %>
    </div>
  </div>

<%- include('partials/footer') %>

