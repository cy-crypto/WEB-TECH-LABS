<%- include('partials/header') %>

  <div class="admin-container">
    <div class="admin-page-header">
      <h1>Manage Products</h1>
      <a href="/admin/products/add" class="btn-admin-primary">Add New Product</a>
    </div>

    <% if (products.length > 0) { %>
      <div class="admin-table-container">
        <table class="admin-table">
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th>Rarity</th>
              <th>Price</th>
              <th>Description</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(function(product) { %>
              <tr>
                <td>
                  <img src="<%= product.image %>" alt="<%= product.name %>" class="admin-table-image" />
                </td>
                <td><strong><%= product.name %></strong></td>
                <td><span class="badge badge-<%= product.rarity.toLowerCase() %>"><%= product.rarity %></span></td>
                <td>$<%= product.price.toFixed(2) %></td>
                <td class="admin-table-description"><%= product.description.substring(0, 50) %><% if (product.description.length > 50) { %>...<% } %></td>
                <td>
                  <div class="admin-table-actions">
                    <a href="/admin/products/<%= product._id %>/edit" class="btn-admin-edit-small">Edit</a>
                    <form method="POST" action="/admin/products/<%= product._id %>/delete" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                      <button type="submit" class="btn-admin-delete-small">Delete</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="admin-empty-state">
        <p>No products found. <a href="/admin/products/add">Add your first product</a></p>
      </div>
    <% } %>
  </div>

<%- include('partials/footer') %>

