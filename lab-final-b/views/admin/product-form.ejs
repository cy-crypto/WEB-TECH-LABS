<%- include('partials/header') %>

  <div class="admin-container">
    <div class="admin-page-header">
      <h1><%= editMode ? 'Edit Product' : 'Add New Product' %></h1>
      <a href="/admin/products" class="btn-admin-secondary">‚Üê Back to Products</a>
    </div>

    <div class="admin-form-container">
      <form method="POST" action="<%= formAction %>" class="admin-form">
        <div class="admin-form-group">
          <label for="name">Product Name *</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            value="<%= product ? product.name : '' %>" 
            required 
            class="admin-form-input"
            placeholder="e.g., Legendary Dragon Card"
          />
        </div>

        <div class="admin-form-group">
          <label for="price">Price ($) *</label>
          <input 
            type="number" 
            id="price" 
            name="price" 
            step="0.01" 
            min="0" 
            value="<%= product ? product.price : '' %>" 
            required 
            class="admin-form-input"
            placeholder="e.g., 29.99"
          />
        </div>

        <div class="admin-form-group">
          <label for="rarity">Rarity *</label>
          <select id="rarity" name="rarity" required class="admin-form-input">
            <option value="">Select Rarity</option>
            <option value="Common" <%= product && product.rarity === 'Common' ? 'selected' : '' %>>Common</option>
            <option value="Rare" <%= product && product.rarity === 'Rare' ? 'selected' : '' %>>Rare</option>
            <option value="Epic" <%= product && product.rarity === 'Epic' ? 'selected' : '' %>>Epic</option>
            <option value="Legendary" <%= product && product.rarity === 'Legendary' ? 'selected' : '' %>>Legendary</option>
          </select>
        </div>

        <div class="admin-form-group">
          <label for="category">Category</label>
          <input 
            type="text" 
            id="category" 
            name="category" 
            value="<%= product && product.category ? product.category : '' %>" 
            class="admin-form-input"
            placeholder="e.g., Fantasy, Action, Magic, Nature"
          />
        </div>

        <div class="admin-form-group">
          <label for="image">Image URL *</label>
          <input 
            type="text" 
            id="image" 
            name="image" 
            value="<%= product ? product.image : '' %>" 
            required 
            class="admin-form-input"
            placeholder="e.g., /assets/home_play_prizes.png"
          />
        </div>

        <div class="admin-form-group">
          <label for="description">Description *</label>
          <textarea 
            id="description" 
            name="description" 
            rows="5" 
            required 
            class="admin-form-input admin-form-textarea"
            placeholder="Enter product description..."><%= product ? product.description : '' %></textarea>
        </div>

        <div class="admin-form-actions">
          <button type="submit" class="btn-admin-primary"><%= submitText %></button>
          <a href="/admin/products" class="btn-admin-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>

<%- include('partials/footer') %>

