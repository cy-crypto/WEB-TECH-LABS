<%- include('partials/header') %>

<section class="thankyou-section">
  <div class="container">
    <div class="thankyou-card">
      <div class="thankyou-icon">âœ“</div>
      <h1>Thank You for Your Order!</h1>
      <p class="thankyou-message">
        Your order has been successfully placed. We'll send you a confirmation email shortly.
      </p>

      <div class="order-summary">
        <h2>Order Summary</h2>
        <p><strong>Order ID:</strong> <%= order._id %></p>
        <p><strong>Date:</strong> <%= order.createdAt.toLocaleString() %></p>
        <p><strong>Status:</strong> <%= order.status %></p>

        <h3 style="margin-top: 20px;">Items</h3>
        <ul class="order-items-list">
          <% order.items.forEach(function(item) { %>
            <li>
              <strong><%= item.name %></strong> &times; <%= item.quantity %>
              - $<%= item.lineTotal.toFixed(2) %>
            </li>
          <% }); %>
        </ul>

        <div class="order-totals">
          <p><strong>Subtotal:</strong> $<%= order.subtotal.toFixed(2) %></p>
          <p><strong>Tax:</strong> $<%= order.tax.toFixed(2) %></p>
          <p><strong>Shipping:</strong> $<%= order.shipping.toFixed(2) %></p>
          <% if (order.discount && order.discount > 0) { %>
            <p><strong>Discount:</strong> - $<%= order.discount.toFixed(2) %></p>
          <% } %>
          <p><strong>Total Paid:</strong> $<%= order.total.toFixed(2) %></p>
        </div>
      </div>

      <div class="thankyou-actions" style="margin-top: 30px;">
        <a href="/products" class="btn-primary">Continue Shopping</a>
        <a href="/" class="btn-secondary">Back to Home</a>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>


